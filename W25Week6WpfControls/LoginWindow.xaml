<Window x:Class="W25Week6WpfControls.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W25Week6WpfControls"
        mc:Ignorable="d"
        Title="LoginWindow" Height="349" Width="468" FontSize="16" FontWeight="Bold" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Canvas>
        <Label Content="Username" Canvas.Left="123" Canvas.Top="91"/>
        <Label Content="Password" Canvas.Left="127" Canvas.Top="142" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="txtUsername" Canvas.Left="213" TextWrapping="Wrap" Canvas.Top="95" Width="120"/>
        <PasswordBox x:Name="pswPassword" Canvas.Left="213" Canvas.Top="146" Width="120"/>
        <Button x:Name="btnLogin" Content="Login" Canvas.Left="123" Canvas.Top="217" Height="34" Width="89" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnLogin_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" Canvas.Left="244" Canvas.Top="217" Height="34" Width="89" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnCancel_Click"/>

    </Canvas>
</Window>
